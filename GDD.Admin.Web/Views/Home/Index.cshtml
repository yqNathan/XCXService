<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>GDD服务平台</title>
    @Styles.Render("~/bootstrap/css")
    @Styles.Render("~/LayUI/layuicss")
    <style>
        .layui-layout-admin .layui-logo {
            color:white;
        }

        .layui-tab {
            margin: 0;
        }

        .layui-tab-item {
            height: 100%;
            width: 100%;
        }
        .layui-layout-admin .layui-body {
            bottom:0px;
        }

        .layui-tab-title li:first-child .layui-tab-close, .layadmin-tabs-select.layui-nav .layui-nav-bar, .layadmin-tabs-select.layui-nav .layui-nav-more {
                display: none;
        }

        .layui-tab-title {
            left:120px;
        }

        .allClose {
            height:40px;
            width:80px;
            padding :0 0;
            text-align:center;
            position: absolute!important;
            left:40px;
            top:0;
            background-color: #f2f2f2;
            border-right:0.5px solid #e8e8e8;
            border-bottom:0.5px solid #e8e8e8;
        }

        .closeItem {
            width:80px;
        }

        .allClose .closeItem{
            color:white;
            line-height:40px;
        }

        .allClose .closeItem a{
            padding:0 5px 0 0;
            color: #808080;
        }

        .allClose .closeItem a:hover{color: black;}
        
        .allClose .closeItem .layui-nav-child a {
            padding:5px 10px;
            color: #808080;
        }

        .closeItem .layui-nav-more {
            right:8px;
            border-top-color: #808080;
        }

        .closeItem .layui-nav-child {
            top: 40px;
        }

        .kit-sid {
            height:40px;
            width:40px;
            padding :0 0;
            text-align:center;
            position: absolute!important;
            left:0;
            top:0;
            background-color: #f2f2f2;
            border-right:0.5px solid #e8e8e8;
            border-bottom:0.5px solid #e8e8e8;
        }

        .kit-side-fold {
            text-align:center;
            height:45px;
            line-height:45px;
        }

        .layui-tab-card {
            border-width: 0px;
        }
    </style>
</head>
<body class="layui-layout-body site-mobile">
    @{
        var obj = ViewData["User"] as SYS_User;
        <div class="layui-layout layui-layout-admin">
            <div class="layui-header">
                <div class="layui-logo">GDD服务平台</div>
                <!-- 头部区域（可配合layui已有的水平导航） -->
                @*<ul class="layui-nav layui-layout-left">
                    <li class="layui-nav-item"><a href="">暂无</a></li>
                    <li class="layui-nav-item"><a href="">暂无</a></li>
                    <li class="layui-nav-item"><a href="">暂无</a></li>
