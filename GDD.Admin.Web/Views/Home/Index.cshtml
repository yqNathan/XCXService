            </div>

            <div class="layui-side layui-bg-black visible-md-block">
                <div class="layui-side-scroll">
                    <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                    @*<div title="收缩菜单栏" class="kit-side-fold"><i class="layui-icon layui-icon-shrink-right" aria-hidden="true"></i></div>*@
                    <ul class="layui-nav layui-nav-tree" lay-filter="test" id="Menu">
                        @Html.Action("CreateMenuHtml", "Menu")
                    </ul>
                </div>
            </div>
            <div class="layui-body" >
                <div class="layui-tab  layui-tab-card" lay-filter="demo" lay-allowclose="true" id="layuitab" style="height:100%;"> 
                    @*style="height:99%;"*@
                    <ul class="layui-tab-title">
                        <li class="layui-this" lay-id="0"><i class="layui-icon layui-icon-home"></i></li>
                    </ul>
                    <ul class="kit-sid">
                        <li  class="kit-side-fold"><i class="layui-icon layui-icon-shrink-right" aria-hidden="true" id="shrink"></i></li>
                    </ul>
                    <ul class="layui-nav allClose">
                        <li class="layui-nav-item closeItem">
                            <a href="javascript:;">选项卡</a>
                            <dl class="layui-nav-child leftTable">
                                <dd lay-event="closeThisTabs"><a href="javascript:;">关闭当前标签页</a></dd>
                                <dd lay-event="closeOtherTabs"><a href="javascript:;">关闭其它标签页</a></dd>
                                <dd lay-event="closeAllTabs"><a href="javascript:;">关闭全部标签页</a></dd>
                            </dl>
                        </li>
                    </ul>
                    <div class="layui-tab-content tabcontent" id="homePage" style="height:100%;">
                        <div class="layui-tab-item layui-show">暂未开发</div>
                    </div>
                </div>
