    }
    @Scripts.Render("~/all/js")


   <script>
       //$('.header-demo,.layui-header,.layui-side .layui-nav').css('background-color', "red");
       $('.header-demo,.layui-header,.layui-side .layui-nav').css('background-color', '@ConfigHelper.GetAppSettingValue("theme_color")');
        var leftwidth = 200;
        $(document).ready(function () {

            $(window).resize(function () {

                var num = 0;
                var mobile_flag = isMobile();
                var gdt = 17;
                if (mobile_flag) {
                    gdt = 0;
                }
                else {
                    $("#layuitab").width($(window).width() - (leftwidth + 120));
                    gdt = 17;
                }
                $('.layui-side.layui-bg-black').width(leftwidth);
                $('.layui-body').css('left', leftwidth + 'px');
                $('.layui-footer').css('left', leftwidth + 'px');
                $("#layuitab").width($(window).width() - leftwidth - 120 - gdt);
                $("#homePage").width($(window).width() - leftwidth - 20 - gdt);
                $("iframe").each(function (e, item) {
                    $(this).width($(window).width() - leftwidth - 20 - gdt);
                })

            });
        })

        //已打开菜单的nonce数组，默认打开主页
        var array = ['0'];
        var isShow = true;  //定义一个标志位
        
            layui.use(['layer','colorpicker'], function () {
                var $ = layui.$
            , colorpicker = layui.colorpicker
            , setIframe = function () {
                    var height = $(window).height() - 370;
                $('#demoAdmin').height(height);
                };
                setIframe();
            $(window).on('resize', setIframe);
                colorpicker.render({
                    elem: '#test-all'
                    , color: 'rgba(255, 255, 255, 0.7)'
                    , format: 'rgb'
                    , predefine: true
                    , alpha: true
                    , done: function (color) {
                        $('#test-all-input').val(color); //向隐藏域赋值
                        console.log(color)
                        $.ajax({
                            dataType: 'JSON',
                            type: "Get",
                            url: "/Home/SetThemeColor",
                            data: { color: color},
                            success: function (data) {
                                layer.tips('给指定隐藏域设置了颜色值：' + color, this.elem);
                            }
                        });
                        color || this.change(color); //清空时执行 change
                    }
                    , change: function (color) {
                        //给当前页面头部和左侧设置主题色
                        $('.header-demo,.layui-header,.layui-side .layui-nav').css('background-color', color);
                        $('.ciframe').css('background-color', color);
                       }
                });
            });
       
        layui.use('element', function () {
            var element = layui.element;
            //触发事件
            var active = {
                tabAdd: function (e) {
                    var nonce = e[0].nonce;
                    if (array.indexOf(nonce) < 0) {
                        array.push(nonce)
                        var strhtml = e[0].getAttribute('lay-href');
                        //新增一个Tab项
                        element.tabAdd('demo', {
                            title: e[0].innerHTML
                         , content: '<iframe class="ciframe" name="myiframe' + nonce + '" id="myrame' + nonce + '" src="' + strhtml + '" scrolling="auto" frameborder="0" scrolling="no" width="100%"  height="100%" ><p>你的浏览器不支持iframe标签</p></iframe>'
                          , id: nonce
                        });
                    }
                    //修改当前选中的tab
                    element.tabChange('demo', nonce);
                }
              , tabDelete: function (othis) {

                  //console.log(othis);
                  ////删除指定Tab项
                  //element.tabDelete('demo', ''); //删除：“商品管理”
                  //othis.addClass('layui-btn-disabled');
              }
              , tabChange: function () {
                  //切换到指定Tab项
                  element.tabChange('demo', '1'); //切换到：用户管理
              }
            };
            element.on('tab(demo)', function (data) {

                $("a[class='menu site-demo-active']").each(function (e, item) {
                    var nonce = item.getAttribute('nonce');
                    $("a[nonce='" + nonce + "']").parent().removeClass("layui-this");
                })
                var layid = this.getAttribute('lay-id');
                $("a[nonce='" + layid + "']").parent().addClass("layui-this");
            });
            element.on('tabDelete(demo)', function (data) {
                array.splice(data.index, 1);
            });

            $('.site-demo-active').on('click', function () {
                var othis = $(this);
                var type = othis.data('type');
                active[type] ? active[type].call(this, othis) : '';
            });

            $(".leftTable dd").on('click', function () {
                var temp = [];
                var eventStr = $(this).attr("lay-event");
                var tabid =  $("li[class='layui-this']").attr('lay-id');
                for (var i = 0; i < array.length; i++) {
                    temp.push(array[i]);
                }
                var length = temp.length;
                if (eventStr == "closeThisTabs") {
                    if (tabid == 0) {
                        return;
                    }
                    element.tabDelete('demo', tabid);
                }
                else if (eventStr == "closeOtherTabs") {
                    for (var i = 1; i < length; i++) {
                        if (tabid == temp[i])
                            continue;
                        element.tabDelete('demo', temp[i]);
                    }
                }
                else if (eventStr == "closeAllTabs") {
                    for (var i = 1; i < length; i++) {
                        element.tabDelete('demo', temp[i]);
                    }
                }
            });
        });


        $('.kit-side-fold').click(function () {
            //选择出所有的span，并判断是不是hidden
            $('.layui-nav-item span').each(function () {
                if ($(this).is(':hidden')) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });

            var gdt = 17;
            if (isMobile()) {
                gdt = 0;
            }
            else {
                gdt = 17;
            }

            //判断isshow的状态
            if (isShow) {
                $('#shrink').attr("class", "layui-icon layui-icon-spread-left");
                leftwidth = 60;
                //将二级导航栏隐藏
                $('dd .menu').each(function () {
                    $(this).hide();
                });
                //修改标志位
                isShow = false;
            } else {
                $('#shrink').attr("class", "layui-icon layui-icon-shrink-right");
                leftwidth = 200;
                $('dd .menu').each(function () {
                    $(this).show();
                });
                isShow = true;
            }

            $('.layui-side.layui-bg-black').width(leftwidth);
            //$('.kit-side-fold i').css('margin-right', '10%');
            $('.layui-body').css('left', leftwidth + 'px');
            $('.layui-footer').css('left', leftwidth + 'px');
            $("#layuitab").width($(window).width() - leftwidth - 120);
            $("#homePage").width($(window).width() - leftwidth - 20 - gdt);
            $("iframe").each(function (e, item) {
                $(this).width($(window).width() - leftwidth - 20 - gdt);
            })

        });

        function isMobile() {
            var userAgentInfo = navigator.userAgent;

            var mobileAgents = ["Android", "iPhone", "SymbianOS", "Windows Phone", "iPad", "iPod"];

            var mobile_flag = false;

            //根据userAgent判断是否是手机
            for (var v = 0; v < mobileAgents.length; v++) {
                if (userAgentInfo.indexOf(mobileAgents[v]) > 0) {
                    mobile_flag = true;
                    break;
                }
            }
            var screen_width = window.screen.width;
            var screen_height = window.screen.height;
            //根据屏幕分辨率判断是否是手机
            if (screen_width < 500 && screen_height < 900) {
                mobile_flag = true;
            }

            return mobile_flag;
        }
    </script>
</body>
</html>