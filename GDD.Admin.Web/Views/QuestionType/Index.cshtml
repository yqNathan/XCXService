@{
    Layout = null;
}
<link rel="stylesheet" type="text/css" id="theme" href="~/Content/bootstrap.css" />
<link rel="stylesheet" type="text/css" href="~/LayUI/layui.css" />
<style>
    .layui-form-label {
        width: 100px;
        margin-bottom: 0px;
        padding: 9px 0;
        vertical-align: central;
        text-align:left;
    }

    .layui-input-block {
        margin-left: 100px;
    }

    .typeLabel {
        width: 70px;
        margin-left:10px;
    }

    .typeSelect {
         margin-left: 80px;
    }

    .layui-btn {
        margin-left: 10px;
    }
</style>

<form class="layui-form" action="">
    <div class="demoTable">
        <div class="layui-inline">
            <label class="layui-form-label">搜索题目类型：</label>
            <div class="layui-input-block">
                <input class="layui-input" name="id" id="QuestionTypeName" autocomplete="off" placeholder="请输入题目类型名称">
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label typeLabel">问卷类型：</label>
            <div class="layui-input-block typeSelect">
                <select name="QuestionnaireTypeID" id="selectQuestionnaireType" lay-filter="selectQuestionnaireType" lay-search="">
                    @*<option value="">请选择</option>*@
                </select>
            </div>
        </div>
        <button class="layui-btn" type="button" data-type="reload" onclick="search();">搜索</button>
        <button class="layui-btn " type="button" onclick="Add();"><i class="layui-icon layui-icon-add-1"></i></button>
        <button data-method="setTop"  type="button" class="layui-btn" id="import"><i class="layui-icon"></i>批量导入</button>
    </div>
</form>
<table class="layui-hide" id="table" lay-filter="table"></table>
<script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
<script type='text/javascript' src='~/Scripts/bootstrap.js'></script>
<script type='text/javascript' src='~/Scripts/respond.js'></script>
<script type='text/javascript' src='~/LayUI/layui.js'></script>
<script type="text/html" id="toolbarDemo">
    <div class="layui-btn-container">
    </div>
</script>
<script type="text/html" id="barDemo">
    @*<a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>*@
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
<script>


    var tempGuid = '00000000-0000-0000-0000-000000000000';
    $.ajax({
        dataType: 'JSON',
        type: "Get",
        url: "/QuestionnaireType/List?name=&pageSize=10000000&pageIndex=1",
        success: function (data) {
            var select = false;
            $('#selectQuestionnaireType').append(new Option("请选择", "00000000-0000-0000-0000-000000000000", true, true))
            $.each(data.data, function (index, item) {
                $('#selectQuestionnaireType').append(new Option(item.QuestionnaireTypeName, item.QuestionnaireTypeID, select, select));//往下拉菜单里添加元素
            })
        }
    });

    layui.use(['table','form'], getList);
    
    $("#import").on("click", function () {
        var that = this;
        //多窗口模式，层叠置顶
        layer.open({
            type: 2 //此处以iframe举例
          , title: '批量导入'
          , area: ['258px', '258px']
          , shade: 0
          , offset: 't'
          , content: '/Import/Index?name=QuestionType'
          , yes: function () {
              $(that).click();
          }
          , zIndex: layer.zIndex //重点1
          , success: function (layero) {

          }
        });
    })

    function search() {
        getList();
    }

    function getList() {
        var table = layui.table;
        var form = layui.form
        var name = $("#QuestionTypeName").val();
        var typeId = $("#selectQuestionnaireType").val() == null ? "00000000-0000-0000-0000-000000000000" : $("#selectQuestionnaireType").val();
        var pageIndex = 1;
        var pageSize = 10;
        //监听工具条
        table.on('tool(table)', function (obj) {
            var data = obj.data;
            if (obj.event === 'detail') {
                layer.msg('ID：' + data.QuestionTypeID + ' 的查看操作');
            } else if (obj.event === 'del') {
                layer.confirm('真的删除行么', function (index) {
                    Del(data.QuestionTypeID);
                    obj.del();
                    layer.close(index);

                });
            } else if (obj.event === 'edit') {
                console.log(JSON.stringify(data));
                location.href = '/QuestionType/QuestionTypeDetail?obj=' + JSON.stringify(data);
                //var param = "1";
                //RedirectToRoute(new { controller: "QuestionType", action: "QuestionDetail", id: 123 });
                //layer.alert('编辑行：<br>' + JSON.stringify(data))
            }
        });

        table.render({
            elem: '#table'
            , url: '/QuestionType/List?typeName=' + name + '&questionnaireTypeID=' + typeId
            , toolbar: '#toolbarDemo'
            , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
            , loading: true
            , page: true
            , request: {
                pageName: 'pageIndex' //页码的参数名称，默认：page
             , limitName: 'pageSize' //每页数据量的参数名，默认：limit
            }, response: {
                statusName: 'code' //规定数据状态的字段名称，默认：code
                , statusCode: 0 //规定成功的状态码，默认：0
                , msgName: 'msg' //规定状态信息的字段名称，默认：msg
                , countName: 'count' //规定数据总数的字段名称，默认：count
                , dataName: 'data' //规定数据列表的字段名称，默认：data
            }
            , limits: [10, 20, 50, 100, 1000, 10000, 1000000]
            , cols: [[
               { field: 'QuestionTypeID', title: 'ID', width: 0, hide: true }//style: 'display:none;'
                , { field: 'QuestionnaireTypeName', title: '问卷类型名称' }
                , { field: 'QuestionTypeName', title: '类型名称' }
                , { fixed: 'right', width: 178, align: 'center', title: '操作', toolbar: '#barDemo' }
            ]]
            , page: true
        });
    }

    function Add() {
        location.href = '/QuestionType/QuestionTypeDetail';
    }

    function Del(id) {
        $.ajax({
            dataType: 'JSON',
            type: "post",
            url: "/QuestionType/Del?id="+id,
            success: function (data) {
                layer.msg(data.msg);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {

            }
        })
    }
</script>
